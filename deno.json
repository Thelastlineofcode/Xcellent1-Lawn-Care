{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-write --allow-env server.ts",
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --watch server.ts",
    "check": "deno check server.ts",
    "test": "deno test --allow-net --allow-read --allow-env"
  },
  "fmt": {
    "options": {}
  },
  "lint": {
    "include": [
      "server.ts",
      "supabase_auth.ts",
      "api-endpoints.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "web/**",
      "bmad/**",
      ".venv/**",
      "**/*.py"
    ],
    "rules": {
      "exclude": [
        "no-import-prefix",
        "no-inner-declarations",
        "no-explicit-any",
        "require-await",
        "no-unused-vars",
        "no-redeclare",
        "adjacent-overload-signatures",
        "no-console"
      ]
    }
  }
}
