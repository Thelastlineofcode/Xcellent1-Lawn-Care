{
  "fmt": {
    "options": {}
  },
  "lint": {
    "files": {
      "exclude": [
        "web/static/**",
        "web/tests/**",
        "bmad/agents/langchain-integration/**",
        "bmad/agents/langchain_integration/**",
        "bmad/bmb/**",
        "bmad/**/workflows/**",
        "bmad/**/installer-templates/**",
        ".venv/**",
        "**/*.py"
      ]
    },
    "rules": {
      "exclude": [
        "no-import-prefix",
        "no-inner-declarations",
        "no-explicit-any",
        "require-await",
        "no-unused-vars",
        "no-redeclare",
        "adjacent-overload-signatures"
      ]
    }
  }
}
