{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-write --allow-env server.ts",
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --watch server.ts",
    "check": "deno check server.ts",
    "test": "deno test --allow-net --allow-read --allow-write --allow-env"
  },
  "imports": {
    "$dotenv/": "https://deno.land/std@0.210.0/dotenv/"
  },
  "compilerOptions": {
    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false
  },
  "fmt": {
    "options": {}
  },
  "lint": {
    "files": {
      "exclude": [
        "web/static/**",
        "web/tests/**",
        "bmad/agents/langchain-integration/**",
        "bmad/agents/langchain_integration/**",
        "bmad/bmb/**",
        "bmad/**/workflows/**",
        "bmad/**/installer-templates/**",
        ".venv/**",
        "**/*.py"
      ]
    },
    "rules": {
      "exclude": [
        "no-import-prefix",
        "no-inner-declarations",
        "no-explicit-any",
        "require-await",
        "no-unused-vars",
        "no-redeclare",
        "adjacent-overload-signatures"
      ]
    }
  }
}