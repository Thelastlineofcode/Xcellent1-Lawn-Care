# Server Configuration
PORT=8000

# Flask Configuration (legacy - not currently used)
FLASK_APP=app.py
FLASK_ENV=development

# API Keys (optional)
PPLX_API_KEY=your_perplexity_api_key_here

# Supabase Configuration (required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# Zoho CRM Integration (optional)
ZOHO_API_KEY=your_zoho_api_key_here
client_id=your_zoho_client_id_here
client_secret=your_zoho_client_secret_here
ZOHO_ACCESS_TOKEN=your_zoho_access_token_here

# Email & SMS Notifications (optional - for automated notifications)
SENDGRID_API_KEY=your_sendgrid_api_key_here
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# PostgreSQL Database (Supabase - required)
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres"

# Instructions:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual credentials
# 3. NEVER commit .env to version control
# 4. Get Supabase credentials from: https://app.supabase.com/project/_/settings/api
# 5. Get SUPABASE_JWT_SECRET from: https://app.supabase.com/project/_/settings/api (under "JWT Secret")
